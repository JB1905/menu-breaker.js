{
  "name": "menu-breaker",
  "version": "2.2.1",
  "description": "Break HTML menu on resize",
  "author": "Jakub Biesiada",
  "license": "MIT",
  "main": "lib/menu-breaker.cjs.js",
  "module": "lib/menu-breaker.esm.js",
  "types": "lib/index.d.ts",
  "scripts": {
    "release": "rimraf lib/* && npm run prettier && npm run lint && npm run build",
    "build": "rollup -c",
    "test": "jest --coverage",
    "watch": "npm run build -- --watch",
    "lint": "eslint 'src/**/*.ts' --fix",
    "prettier": "prettier --write 'src/**/*.ts'",
    "deploy": "gh-pages -d demo/build"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/JB1905/menu-breaker.js.git"
  },
  "keywords": [
    "JavaScript",
    "jQuery",
    "menu",
    "switch",
    "responsive",
    "mobile"
  ],
  "bugs": {
    "url": "https://github.com/JB1905/menu-breaker.js/issues"
  },
  "homepage": "https://github.com/JB1905/menu-breaker.js#readme",
  "devDependencies": {
    "@rollup/plugin-node-resolve": "^7.0.0",
    "@types/jest": "^24.9.1",
    "@types/jquery": "^3.3.31",
    "@typescript-eslint/parser": "^2.17.0",
    "eslint": "^6.8.0",
    "eslint-config-prettier": "^6.9.0",
    "eslint-plugin-prettier": "^3.1.2",
    "gh-pages": "^2.2.0",
    "husky": "^4.2.1",
    "jest": "^25.1.0",
    "jquery": "^3.4.1",
    "lint-staged": "^10.0.2",
    "prettier": "^1.19.1",
    "rollup-plugin-terser": "^5.2.0",
    "rollup-plugin-typescript2": "^0.26.0",
    "ts-jest": "^25.0.0",
    "typescript": "^3.7.5"
  },
  "jest": {
    "transform": {
      "^.+\\.ts?$": "ts-jest"
    }
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "src/**/*.{js}": [
      "npm run prettier",
      "npm run lint"
    ]
  }
}
